block content 
  h1= title
  p Welcome to your Dashboard #{userDetails.username}, You are now logged in as a #{userDetails.member ? 'VIP member' : 'standard member'}. 
  br
  br
  if allMessages.length 
    dl 
      each message in allMessages 
        dt 
          span Title: #{message.title} 
        dd Message: #{message.text}
        if userDetails.member
          dd Date: #{message.timestampFormatted}
          dd User: #{message.user.username}
  br
  br
  span #{userDetails.username}
  br
  span #{userDetails.member}
  br
  br
  if !userDetails.member
    a(href=`/catalog/user/dashboard/register_vip/${userDetails.username}` class="vip-link") Become a VIP member
    br
  br
  a(href="/catalog/user/logout") Logout